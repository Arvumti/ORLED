/* --- HTML --- */
body,
html
	font-family Arial
	/*font-family "PT Sans", sans-serif*/
	font-family "Raleway", Arial, sans-serif
	font-size 12px
	height 100%
	/*overflow hidden*/
	width 100%
	zoom 100%

	clear()
body
	background url("/images/fondoOrled.png") no-repeat 50% 50% !important
	background-size 450px 450px !important
header
	background-color color-base
	height 60px
	left 0
	overflow hidden
	position relative
	top 0
	z-index 10

	section
		height 50%

		&.icon-list
			left 10px
			position absolute		
			top 0

			ul
				clear()
				display inline-block
				vertical-align top

				&.pull-right
					margin-right 1em
					float right
				&.pull-center
					margin-left 50%
					margin-right 50%
				li
					display inline-block
					font-size 1.3em
					line-height 60px
					font-weigth bold

					.info-plantel
						border-bottom 1px solid #fff
						font-weigth bold

					.info-periodo
						color color-font

					a
						color color-font

						fsombra()
						
		&.profile
			height 60px		
			display block
			float left

			figure,
			span
				display inline-block
				line-height 60px
				vertical-align top

			figure
				height 100%

				img
					height 100%
					width 80px

			span
				&.icono
					display inline-block
					text-align center
					width 35px

					span
						display inline-block
						width 100%

						&::before
							content icon-menu
							color #EEE
							font-family  'FontAwesome'
							font-size  2em

				&.lblUsuario
					color color-font
					font-weight bold
					font-size 1em
					padding-left 1em
					width 155px

					fsombra()
			i
				font-size 35px
				color #fff
				display inline
				margin-top 10px !important
				margin-left 20px !important
				position absolute
				&:hover
					color #74EA65
				&.menuOpen
					color #74EA65
			span
				display inline
				text-align center
				color #fff
				font-size 15px
				margin-top 19px
				margin-left 62px

			
	&.sinFondo
		background-color #fff !important
nav,
main
	bottom 0
	left 0
	padding 70px 1em 0 1em
	position absolute
	right 0
	top 0
	z-index 1

	transition left 0.8s

	&.is-menu-open
		left 300px

		transition left 0.3s

main

	.aside
		border-right 2px solid #AAA
		max-width 200px
		overflow scroll
		padding 0
		text-align left
		width 14%
		border 1px solid #333

		ul
			margin 0
			padding 0

			li
				display block

				>input
					display inline-block
					width 19%

				>a
					border-bottom 1px solid #333
					display inline-block
					color #333
					font-weight bold
					text-decoration none
					width 80%

					&:hover
						background-color color-base
						color #EEE

				div
					margin-left 10px

	.main-content
		text-align left
		position relative
		margin 0 auto
		max-width 1100px
		width 85%
		border 1px solid #333
		
		#load_content
			height 95%
			margin-top 30% !important
			padding-top 30% !important
			

		.menu-base
			border-top 1px solid #333
			height 5%
			margin 0 auto
			max-width 1303px
			min-height 30px
			width 100%


			display inline-block
			vertical-align middle

			ul
				background-color #AAA
				margin 0
				padding 0
				height 100%

				li
					float left
					background-color #EEE
					border-right 1px solid #333
					font-weight bold
					display inline-block
					height 100%
					line-height 30px
					padding 0
					margin 0
					margin-right 0px

					&.active,
					&:hover
						background-color color-base
						cursor pointer
						
						a
							color #EEE

					a
						color #333
						display block
						padding 0 0.5em
						width 100%

	.aside,
	.main-content
		display inline-block
		height 100%
		vertical-align top
.LoadContent
	margin-top 5% !important
nav
	background-color #006CAB
	left -300px
	width 300px
	overflow scroll
	z-index 9

	transition left 0.8s

	div
		&.busqueda
			margin-top 70px !important
			span
				position relative

				input
					border none
					background-color #fff
					color 
					margin 0
					padding-left 45px
					border-radius 5px

				&::before
					content icon-search
					color gray
					font-family  'icomoon'
					height 42px
					line-height 42px
					position absolute
					text-align center
					top 0
					width 40px
					z-index 90


	ul
		clear()

		&.menu-n1,
		&.search-n1
			li
				display block
				font-weight bold
				line-height 60px

				a
					
					display block
					color color-font-sm
					padding 0 1em
					position relative

					fsombra()

					i
						position absolute
						right 1em
						top 20px

					&:hover
						color #74EA65

				&:first-child
					a
						border-top 0px solid #555

				&.isActive
					> a
						color #74EA65

					ul.menu-n2
						li.isActive
							a
								color #74EA65

		&.menu-n2
			background-color #575A67
			display none
			
			clear()

			li
				font-size 0.8em
				line-height 40px

				a
					border none
					padding-left 3em

					&:hover
						color color-hover

				&:first-child
					a
						border-top none

		&.search-n1
			background-color #575A67

			li
				font-size 0.8em
				line-height 40px

				a
					border none
					padding-left 3em

					&:hover
						color color-hover

				&:first-child
					a
						border-top none

	&.is-menu-open
		left 0px

		transition left 0.3s

table
	tbody
		tr.isSelected
			background-color #31353D

			td
				color #EEE
				font-weight bold

	&.table-content-center
		th,
		td
			font-size 0.6em
			text-align center
	&.table-vertical
		margin-top 180px !important
		thead
			tr
				th
					&.vertical-th 
						border-top 1px solid transparent !important
						width 20px
						position relative
						margin 0px !important
						padding 0px !important
						
						span
							border 1px solid #333
							border-bottom none
							border-left none
							/*background-color #FFF !important*/
							position absolute
							display inline-block
							margin 0px !important
							padding 0px !important
							transform rotate(270deg)
							background-color color-base
							width 180px
							left -88px
							bottom 90px !important
							font-size 10px !important
							margin-left 10px !important
							color #fff !important
							&:last-child
								border-bottom 1px solid #333

	&.table-custom
		width 100%
		margin-top 10px
		thead
			tr
				border 1px solid #D6D6D6

				&.titulo
					background-color color-base2
					span
						color #fff
					label
						color #fff
				th
					&.min
						width 100px

		tbody
			tr
				&.fechaPago:hover
					background-color color-hover
					cursor pointer
					td
						color #fff
				td
					
					border 1px solid #D6D6D6
					&.min
						width 100px
						
					&.abrirModalTabla
						
						&:hover
							cursor pointer
							background-color color-hover
							color #fff
					&.tableEmpty
						background-color #EAEAEA
				&.selectCell
					&:hover
						background-color #3399FF
						cursor pointer				
						td
							color #fff							

				&:hover
					background-color 
					cursor pointer

				&.isActive
					background-color #3399FF
					td
						color #fff
		tfoot
			tr
				td
					border 1px solid white
		
		.table-row-full
			width 100%
			
		.table-row-half
			display inline-block
			vertical-align top
			width 50%

	&.pointer

		tbody

			tr
				&:hover
					cursor pointer
					background-color color-hover

					td
						color #fff
.tabs
	&.tabs-custom
		dd
			&.active				
				a
					background-color #00A4FF
					i,span
						color #fff
					
			a
				background-color color-base
				
				&:hover
					background-color #00A4FF
					i,span
						color #fff
			i,
			span
				text-align center
				color #fff
				font-size 12px
			i
				color #fff
				font-size 13px

	.tab-title
		&.error
			a
				background-color #A55 !important
.tabs-content-custom
	padding-left 10px
	padding-right 10px
	background-color #fff
	margin-left -12px
	border 1px solid #D3D3D3
.pnl-datos
	padding 0
	text-align left
	width 100%
	height 100%	
	overflow-x hidden
	overflow-y hidden		
	margin-bottom -14px	
	legend
		background-color #fff !important
.sub-content
	margin-bottom 22px
	height 596px
.menuInput
	th
		input
			width 90% !important
			display inline
		i
			display inline
			margin-left 5px
			&:hover
				cursor pointer
				color color-hover
.contenedorScroll-y
	overflow-x hidden
	overflow-y scroll
	max-height 200px